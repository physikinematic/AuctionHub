{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Client Debugger",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}\\Client",
      "preLaunchTask": "npm: start"
    },
    {
      "type": "node-terminal",
      "name": "Nest Debugger",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}\\Server\\Nest"
    },
    {
      "type": "node-terminal",
      "name": "Express Debugger",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}\\Server\\Express"
    }
  ]
}
